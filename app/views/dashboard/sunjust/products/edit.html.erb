
<div class="row">
  <%= render 'form' %>
  <div class="col-sm-5 col-md-5">
      <h4>產品圖片</h4>
    <div class="row">
      <%= img_blank @product %>
      <% @product.photos.each do |photo| %>
        <div class="col-sm-6">
          <div class="img_thumb">
            <%= image_tag(photo.image.thumb) %>
            <%= link_to 'delete', dashboard_sunjust_photo_path(photo), method: :delete, class:"btn btn-sm btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 
